<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/dialogfragment_dialog2_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_fragment2"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/dialogfragment_dialog2_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="@string/dialogfragment_dialog2_content"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogfragment_dialog2_title" />
        <Button
            android:id="@+id/dialogfragment_dialog2_negative_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/button_color1"
            android:text="@string/no"
            android:textColor="@color/basic_text"
            app:layout_constraintEnd_toStartOf="@id/dialogfragment_dialog2_positive_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogfragment_dialog2_content" />
        <Button
            android:id="@+id/dialogfragment_dialog2_positive_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/button_color2"
            android:text="@string/yes"
            android:textColor="@color/basic_text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dialogfragment_dialog2_negative_button"
            app:layout_constraintTop_toBottomOf="@+id/dialogfragment_dialog2_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
