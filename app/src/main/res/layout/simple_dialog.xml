<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/dialogfragment_dialog1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_fragment1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/dialogfragment_dialog1_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/dialogfragment_dialog1_content"
        android:textSize="24sp" />

    <Button
        android:id="@+id/dialogfragment_dialog1_ok_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@android:string/ok"
        android:textSize="18sp" />

</LinearLayout>
